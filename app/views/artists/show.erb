<%= @artist.name %>
<% @artist.songs.each do |song| %>
<li><a href="/songs/<%= song.slug %>"><%= song.name %> - <%= song.genres.map{|genre| genre.name}.join(" ") %></a></li>
<% end %>

<% @artist.genres.each do |genre| %>
<p><li><a href="/genres/<%= genre.slug%>"><%= genre.name %></a></li></p>
<% end %>